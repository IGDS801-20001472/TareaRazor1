@page
@model TareaRazor.Pages.IMCModel
@{
}



<h3>Indice de Masa Corporal</h3>

<form method="POST">
    <p>Peso: <input type="number" step="0.01" asp-for="peso" /> kg.</p>

    <p>Altura: <input type="number" step="0.01" asp-for="altura" /> mtrs.</p>

    <p><input type="submit" value="Calcular" /></p>

    @if (Model.result != 0)
    {
        <div>
            <strong>IMC = @Model.result</strong>
        </div>
    
        @if (Model.result < 18)
        {
            <div>
                <strong style="color: darkslateblue;">Peso Bajo</strong>
            </div>
        }
        else if (Model.result > 18 && Model.result < 25)
        {
            <div>
                <strong style="color: green;">Peso Normal</strong>
            </div>
        }
        else if (Model.result > 25 && Model.result < 27)
        {
            <div>
                <strong style="color: yellow;">Sobre Peso</strong>
            </div>
        }
        else if (Model.result > 27 && Model.result < 30)
        {
            <div>
                <strong style="color: orange;">Obesidad grado I</strong>
            </div>
        }
        else if (Model.result > 30 && Model.result < 40)
        {
            <div>
                <strong style="color: orangered;">Obesidad grado II</strong>
            </div>
        }
        else if(Model.result > 40)
        {
            <div>
                <strong style="color: red;">Obesidad grado III</strong>
            </div>
        }

    }
</form>
